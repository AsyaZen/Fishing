<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintCircleRadius="8dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="123dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pavlinovo" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView"
            android:textSize="20sp"
            android:text="Название"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginStart="10sp"/>

        <TextView
            android:id="@+id/textViewRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_toEndOf="@+id/imageView"
            android:textSize="15sp"
            android:text="Брестская область"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/textViewDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView"
            android:layout_below="@+id/textViewRegion"
            android:textSize="10sp"
            tools:text="Барановичский район"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textViewDistrict"
            android:layout_below="@+id/textViewRegion"
            android:textSize="10sp"
            tools:text="инфа"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"/>

<!--        <ImageView-->
<!--            android:id="@+id/imageView2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            app:srcCompat="@drawable/ic_favorite"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:visibility="gone"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>